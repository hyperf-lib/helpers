{
    "name": "hyperf-lib/helpers",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "php",
        "hyperf"
    ],
    "description": "基于hyperf日常开发工具包",
    "autoload": {
        "files": [
            "src/Functions.php"
        ],
        "psr-4": {
            "Helpers\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HyperfTest\\": "tests"
        }
    },
    "require": {
        "php": ">=7.3",
        "hyperf/di": "2.2.*",
        "hyperf/framework": "2.2.*",
        "hyperf/guzzle": "^2.2",
        "hyperf/logger": "2.2.*",
        "hyperf/redis": "^2.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "mockery/mockery": "^1.0",
        "phpstan/phpstan": "^1.0",
        "phpunit/phpunit": ">=7.0",
        "swoole/ide-helper": "^4.5",
        "swow/swow": "dev-develop"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit -c phpunit.xml --colors=always",
        "analyse": "phpstan analyse --memory-limit 1024M -l 0 ./src",
        "cs-fix": "php-cs-fixer fix $1"
    },
    "extra": {
        "hyperf": {
            "config": "Helpers\\ConfigProvider"
        }
    }
}
